FROM busybox

ARG SOURCE_BRANCH
ARG SOURCE_COMMIT
ARG COMMIT_MSG
ARG DOCKER_REPO
ARG DOCKERFILE_PATH
ARG CACHE_TAG
ARG IMAGE_NAME

ENV SOURCE_BRANCH   $SOURCE_BRANCH
ENV SOURCE_COMMIT   $SOURCE_COMMIT
ENV COMMIT_MSG      $COMMIT_MSG
ENV DOCKER_REPO     $DOCKER_REPO
ENV DOCKERFILE_PATH $DOCKERFILE_PATH
ENV CACHE_TAG       $CACHE_TAG
ENV IMAGE_NAME      $IMAGE_NAME

CMD ["env"]
